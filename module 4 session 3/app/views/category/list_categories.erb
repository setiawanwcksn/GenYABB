<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<body>
  <div class="container pt-4">
    <h1 class="d-flex justify-content-center">List All of Items</h1>
    <div class="d-flex flex-row-reverse">
        <a class="btn btn-success" href="/category/create">Create Category </a>
    </div>
    <div class="">
        <a class="btn btn-secondary" href="/item/list_categories">List of All Categories</a>
        <a class="btn btn-secondary" href="/">List of All Items</a>
    </div>
  </div>

    <div class="container">
      <table class="table table-striped table-hover">
        <thead>
          <th>No</th>
          <th>Name</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% categories.each_with_index do |category, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
            <td>
              <a href="/category/show?id=<%= category.id %>" class="btn btn-light">Show</a>
              <a href="/category/edit?id=<%= category.id %>" class="btn btn-secondary">Edit</a>
              <a href="/category/delete?id=<%= category.id %>" class="btn btn-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <%end %>
        </tbody>
      </table>
    </div>
