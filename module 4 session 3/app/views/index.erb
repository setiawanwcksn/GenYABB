<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<body>
  <div class="container pt-4">
    <h1 class="d-flex justify-content-center">List All of Items</h1>
    <div class="d-flex flex-row-reverse">
      <a href="/item/create" class="btn btn-success" >New Item</a>
    </div>
    <div class="">
        <a class="btn btn-secondary" href="/item/list_categories">List of All Categories</a>
    </div>
  </div>
  <center>
    <div class="container">
      <table class="table table-striped table-hover">
        <thead>
          <th>No</th>
          <th>Name</th>
          <th>Price</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% items.each_with_index do |item, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.name %></td>
            <td>Rp. <%= item.price %></td>
            <td>
              <a href="/item/show?id=<%= item.id %>" class="btn btn-light">Show</a>
              <a href="/item/edit?id=<%= item.id %>" class="btn btn-secondary">Edit</a>
              <a href="/item/delete?id=<%= item.id %>" class="btn btn-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <%end %>
        </tbody>
      </table>
    </div>
  </center>
