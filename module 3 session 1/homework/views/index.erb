<%= erb :template %>

<body>
  <div class="container pt-4">
    <h1 class="d-flex justify-content-center">Items</h1>
    <div class="d-flex flex-row-reverse">
      <a href="/items/new" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAdd">New Item</a>
    </div>
  </div>
  <center>
    <div class="container">
      <table class="table table-striped table-hover">
        <thead>
          <th>No</th>
          <th>Name</th>
          <th>Price</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% items.each_with_index do |item, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.name %></td>
            <td>Rp. <%= item.price %></td>
            <td>
              <a href="/items/show/<%= item.id %>" class="btn btn-light">Show</a>
              <a href="/items/edit/<%= item.id %>" class="btn btn-secondary">Edit</a>
              <a href="/items/delete/<%= item.id %>" class="btn btn-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <%end %>
        </tbody>
      </table>
    </div>
  </center>

  <!-- Modal -->
  <div class="modal fade" id="modalAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Create new item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
          <div class="form-control">
            <form method="POST" action="/items/create">
              <p>
                <input name="name" type="text" placeholder="Item name">
              </p>
              <p>
                <input name="price" type="int" placeholder="item price">
              </p>
              <p>
                <select name="categories" class="form-select" style="width: 55%;" aria-label="Default select example">
                  <option disabled selected>Select categories</option>
                  <% categories.each do |items| %>
                  <option value="<%= items.id %>"> <%= items.name %> </option>
                  <% end %>
                </select>
              </p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
        </form>
      </div>
    </div>
  </div>

  <%= erb :template_footer %>
</body>